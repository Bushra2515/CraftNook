<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order History</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <!-- header -->
      <div class="header-hist">
        <h1>Order History</h1>
        <p>Track and manage your past orders</p>
      </div>

      <!-- filter bar -->
      <div class="filter-bar-hist">
        <select>
          <option>All Orders</option>
          <option>Last 30 Days</option>
          <option>Last 3 Months</option>
          <option>Last Year</option>
        </select>
        <select>
          <option>All Status</option>
          <option>Delivered</option>
          <option>Shipped</option>
          <option>Processing</option>
          <option>Cancelled</option>
        </select>
        <input type="text" placeholder="Search orders..." />
      </div>

      <!-- order list -->
      <div class="orders-list-hist">
        <% if (orders.length === 0) { %>
        <p>You have no orders yet.</p>
        <% } else { %> <% orders.forEach(order => { %>
        <div class="order-card-hist">
          <% order.sellers.forEach(sellerBlock => { %>
          <div class="order-header-hist">
            <div class="order-info-hist">
              <h3>Order ID: <%= order._id %></h3>
              <p>Date: <%= order.createdAt.toDateString() %></p>
              <p class="seller-name-hist">
                Seller: <%= sellerBlock.seller.name %>
              </p>
            </div>
            <div class="order-status-hist">
              <span class="status-badge-hist status-delivered-hist">
                <%= order.status %>
              </span>
              <div class="order-total-hist">
                â‚¹<%= sellerBlock.totalAmount %>
              </div>
            </div>
          </div>

          <div class="order-content-hist">
            <!-- <p><strong>Seller:</strong> <%= sellerBlock.seller.name %></p> -->

            <div class="items-grid-hist">
              <% sellerBlock.products.forEach(item => { %>

              <div class="item-hist">
                <div class="item-icon-hist">ðŸ“±</div>
                <div class="item-details-hist">
                  <h4><%= item.product.name %></h4>
                  <p>Quantity: <%= item.quantity %></p>
                  <p>Price: â‚¹<%= item.product.price %></p>
                  <p>Subtotal: â‚¹<%= item.product.price * item.quantity %></p>
                </div>
              </div>

              <% }) %>
            </div>

            <div class="button-group-hist">
              <button class="btn-hist btn-primary-hist">View Details</button>
              <button class="btn-hist btn-secondary-hist">Track Package</button>
              <button class="btn-hist btn-secondary-hist">Reorder</button>
            </div>
          </div>
          <% }) %>
        </div>
        <% }) %> <% } %>
      </div>

      <!-- Load More Button -->
      <div class="load-more-hist">
        <button class="btn-hist btn-secondary-hist">Load More Orders</button>
      </div>
    </div>

